{
  "name": "fliplet-event-single",
  "version": "1.0.0",
  "description": "Fliplet Event App - Comprehensive Test Suite",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:all": "playwright test",
    "test:features": "playwright test tests/user/features/ tests/admin/features/",
    "test:journeys": "playwright test tests/user/journeys/ tests/admin/journeys/",
    "test:e2e": "playwright test tests/e2e/",
    "test:user": "playwright test tests/user/",
    "test:admin": "playwright test tests/admin/",
    "test:user:features": "playwright test tests/user/features/",
    "test:admin:features": "playwright test tests/admin/features/",
    "test:user:journeys": "playwright test tests/user/journeys/",
    "test:admin:journeys": "playwright test tests/admin/journeys/",
    "test:user:core": "playwright test tests/user/features/core/",
    "test:user:agenda": "playwright test tests/user/features/agenda/",
    "test:user:meetings": "playwright test tests/user/features/meetings/",
    "test:user:settings": "playwright test tests/user/features/settings/",
    "test:admin:user-management": "playwright test tests/admin/features/user-management/",
    "test:admin:event-management": "playwright test tests/admin/features/event-management/",
    "test:admin:content-management": "playwright test tests/admin/features/content-management/",
    "test:admin:attendance": "playwright test tests/admin/features/attendance/",
    "test:parallel": "playwright test --workers=4",
    "test:features:parallel": "playwright test tests/user/features/ tests/admin/features/ --workers=4",
    "test:journeys:parallel": "playwright test tests/user/journeys/ tests/admin/journeys/ --workers=2",
    "test:e2e:parallel": "playwright test tests/e2e/ --workers=1",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:codegen": "playwright codegen",
    "test:trace": "playwright show-trace",
    "test:coverage": "playwright test --reporter=html",
    "test:smoke": "playwright test tests/user/features/core/ tests/admin/features/user-management/",
    "test:regression": "playwright test tests/user/ tests/admin/",
    "test:acceptance": "playwright test tests/e2e/",
    "test:ci": "playwright test --reporter=line --workers=4"
  },
  "keywords": ["playwright", "testing", "automation", "fliplet", "event-app"],
  "author": "QA Team",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.53.1",
    "dotenv": "^16.5.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "typescript": "^5.8.3"
  }
}
